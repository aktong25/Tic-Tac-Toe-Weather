<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aktong.tictactoe_weather.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/lightning"
            android:layout_below="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView2" />

        <Button
            android:id="@+id/onePlayerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="224dp"
            android:onClick="onClickSingle"
            android:text="Single Player" />

        <Button
            android:id="@+id/twoPlayerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onePlayerBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:onClick="onClickMulti"
            android:text="Multi Players" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Tic Tac Toe - Weather"
            android:textStyle="bold"
            android:textColor="#fffc40"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/twoPlayerBtn"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/twoPlayerBtn"
            app:srcCompat="@mipmap/clouds" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@mipmap/lightning"
            android:layout_below="@+id/twoPlayerBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@mipmap/clouds" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
